{
  "name": "codex-opencode-discord-bridge",
  "version": "0.1.0",
  "description": "Discord bridge for Codex notify hooks and OpenCode plugins",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "check": "npm run lint && npm run test"
  },
  "keywords": [
    "discord",
    "codex",
    "opencode",
    "bridge"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.18"
  },
  "dependencies": {
    "discord.js": "^14.16.3",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "pino": "^9.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.5.1",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "supertest": "^6.3.4",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.4.5",
    "vitest": "^2.1.1"
  }
}
